<% layout("/layouts/boilerplate") %>

<style>
  /* Filters Container */
  #filters {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 1.5rem;
    padding: 1rem 2rem;
    border-bottom: 1px solid #ddd;
    background: #fafafa;
  }

  /* Each Filter */
  .filter {
    text-align: center;
    transition: all 0.3s ease-in-out;
    opacity: 0.8;
    min-width: 70px;
  }

  .filter:hover {
    opacity: 1;
    transform: translateY(-4px);
    cursor: pointer;
  }

  .filter i {
    font-size: 1.5rem;
    color: #444;
    margin-bottom: 0.3rem;
  }

  .filter p {
    font-size: 0.8rem;
    margin: 0;
    font-weight: 500;
    color: #333;
  }

  /* Tax Toggle */
  .tax-toggle {
    margin-left: auto;
    border: 1px solid #aaa;
    border-radius: 2rem;
    padding: 0.5rem 1rem;
    background: white;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    transition: 0.3s ease;
  }

  .tax-toggle:hover {
    border-color: #333;
    background: #f3f3f3;
  }

  /* Cards Grid */
  .listing-link {
    text-decoration: none;
    color: inherit;
  }

  .listing-card {
    border: none;
    border-radius: 1rem;
    overflow: hidden;
    box-shadow: 0px 3px 10px rgba(0,0,0,0.1);
    transition: transform 0.3s ease;
    height: 100%; /* equal height cards */
  }

  .listing-card:hover {
    transform: translateY(-6px);
  }

  .listing-card img {
    height: 180px;
    object-fit: cover;
    width: 100%;
  }

  .card-body {
    padding: 1rem;
  }

  .card-text {
    font-size: 0.9rem;
    color: #222;
  }

  .card-text b {
    font-size: 1rem;
    color: #000;
  }

  .tax-info {
    display: none;
    font-size: 0.8rem;
    color: #888;
  }

  /* Responsive */
  @media (max-width: 768px) {
    #filters {
      justify-content: center;
      gap: 1rem;
    }
    .tax-toggle {
      margin: 1rem auto 0;
    }
    .listing-card img {
      height: 160px;
    }
  }
</style>

<div id="filters">
  <div class="filter"><i class="fa-solid fa-fire"></i><p>Trending</p></div>
  <div class="filter"><i class="fa-solid fa-bed"></i><p>Rooms</p></div>
  <div class="filter"><i class="fa-solid fa-mountain-city"></i><p>Iconic Cities</p></div>
  <div class="filter"><i class="fa-solid fa-mountain-city"></i><p>Mountains</p></div>
  <div class="filter"><i class="fa-solid fa-chess-rook"></i><p>Castles</p></div>
  <div class="filter"><i class="fa-solid fa-snowflake"></i><p>Arctics</p></div>
  <div class="filter"><i class="fa-solid fa-campground"></i><p>Camping</p></div>
  <div class="filter"><i class="fa-regular fa-cow"></i><p>Farms</p></div>
  <div class="filter"><i class="fa-solid fa-landmark-dome"></i><p>Domes</p></div>
  <div class="filter"><i class="fa-solid fa-sailboat"></i><p>Boats</p></div>

  <div class="tax-toggle">
    <div class="form-check-reverse form-switch">
      <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
      <label class="form-check-label" for="flexSwitchCheckDefault">Display total after Taxes</label>
    </div>
  </div>
</div>

<!--  FIXED GRID (4 per row on large) -->
<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4 mt-3">
  <% for (let listing of allListings) { %>
    <div class="col">
      <a href="/listings/<%= listing._id %>" class="listing-link">
        <div class="card listing-card">
          <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image">
          <div class="card-body">
            <p class="card-text">
              <b><%= listing.title %></b><br>
              &#8377; <%= listing.price.toLocaleString("en-IN") %> / night
              <i class="tax-info">&nbsp;&nbsp;+18% GST</i>
            </p>
          </div>
        </div>
      </a>
    </div>
  <% } %>
</div>

<script>
  let taxSwitch = document.getElementById("flexSwitchCheckDefault");
  taxSwitch.addEventListener("click", () => {
    let taxInfo = document.getElementsByClassName("tax-info");
    for (let info of taxInfo) {
      info.style.display = (info.style.display !== "inline") ? "inline" : "none";
    }
  });
</script>
