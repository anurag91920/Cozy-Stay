<style>
  /* ===== Search Button ===== */
  .search-btn {
    background-color: #fe424d;
    color: #fff;
    border-radius: 25px;
    padding: 0.4rem 1.2rem;
    white-space: nowrap;
  }
  .search-btn:hover {
    background-color: #fe424d;
    color: #fff;
  }

  /* ===== Search Input ===== */
  .search-inp {
    border-radius: 25px;
    padding: 0.5rem 1.2rem;
    font-size: 1rem;
    width: 100%;
  }

  /* ===== Mobile Search Full Width ===== */
  @media (max-width: 768px) {
    .search-form {
      width: 100%;
      margin: 0.75rem 0;
    }
  }

  /* ===== Remove Bootstrap Active / Blue ===== */
  .nav-link.active,
  .nav-link:focus,
  .dropdown-item.active,
  .dropdown-item:focus {
    background-color: transparent !important;
    color: #000 !important;
  }

  /* ===== Hover Effect ===== */
  .nav-link:hover {
    color: #fe424d;
    background-color: #f8f9fa;
    border-radius: 10px;
  }

  /* ===== Mobile Open Menu Style ===== */
  .navbar-collapse.show {
    display: flex;
    flex-direction: column;

    background-color: #ffffff;
    padding: 12px;
    margin-top: 10px;
    border-radius: 16px;

    box-shadow: 0 4px 14px rgba(0, 0, 0, 0.1);
  }

  /* Mobile menu links */
  .navbar-collapse.show .nav-link {
    color: #000 !important;
    padding: 10px 12px;
    border-radius: 10px;
    font-weight: 500;
  }

  .navbar-collapse.show .nav-link:hover {
    background-color: #f5f5f5;
    color: #000 !important;
  }
</style>

<nav class="navbar navbar-expand-md navbar-light bg-body-light border-bottom sticky-top">
  <div class="container-fluid">

    <!-- Logo -->
    <a class="navbar-brand" href="/listings">
      <i class="fa-regular fa-compass"></i>
    </a>

    <!-- Hamburger -->
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarNav"
      aria-controls="navbarNav"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- Navbar Content -->
    <div class="collapse navbar-collapse" id="navbarNav">

      <!-- Left -->
      <ul class="navbar-nav me-3">
        <li class="nav-item">
          <a class="nav-link" href="/listings">Explore</a>
        </li>
      </ul>

      <!-- Search -->
      <form
        class="d-flex flex-grow-1 search-form"
        action="/listings/search"
        method="GET"
        role="search"
      >
        <input
          class="form-control me-2 search-inp"
          type="search"
          name="q"
          placeholder="Search destinations"
          required
        />
        <button class="btn search-btn" type="submit">
          Search
        </button>
      </form>

      <!-- Right -->
      <ul class="navbar-nav ms-auto">
        <li class="nav-item">
          <a class="nav-link" href="/listings/new">
            Airbnb your home
          </a>
        </li>

        <% if (!currUser) { %>
          <li class="nav-item">
            <a class="nav-link fw-bold" href="/signup">Sign Up</a>
          </li>
          <li class="nav-item">
            <a class="nav-link fw-bold" href="/login">Log In</a>
          </li>
        <% } else { %>
          <li class="nav-item">
            <span class="nav-link">
              Welcome, <%= currUser.username %>
            </span>
          </li>
          <li class="nav-item">
            <a class="nav-link fw-bold" href="/logout">Log Out</a>
          </li>
        <% } %>
      </ul>

    </div>
  </div>
</nav>
